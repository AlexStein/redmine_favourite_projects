<% if (Setting.plugin_redmine_favourite_projects['modifyTopMenu']) %>
<div id="fav_projs">
<% FavouriteProject.find(:all, :conditions => "user_id = #{User.current.id}",:include => :project, :order => 'projects.name').each do |fav|%>
	<li><%= link_to_project fav.project, {}, :class => 'icon icon-projects' %></li>
<% end %>
</div>
  <script>
  fav_projs_ = document.getElementById("fav_projs");
  fav_menu_ = document.getElementById("favourite-menu");
  fav_menu_.innerHTML = fav_projs_.innerHTML;
  fav_projs_.innerHTML = "";
  </script>
<% end %>
